<Application x:Class="Kleptos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kleptos"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="JetBrainsReg">pack://application:,,,/Kleptos;component/fonts/#JetBrains Mono Regular</FontFamily>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="{StaticResource JetBrainsReg}" />
        </Style>
    </Application.Resources>
</Application>
